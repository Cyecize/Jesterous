{% extends 'admin/panel.html.twig' %}
{% block title %}Email all subs{% endblock %}
{% block sectionBody %}
    <h2 class="text-dark">Email subscribers</h2>
    <hr>
    <div id="" class="container">
        <form method="post">
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" required placeholder="Subject...." maxlength="255">
                {#<div class="text-danger">{{ form_errors(form1.href) }}</div>#}
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <input type="text" class="form-control" name="message" id="message" required placeholder="Message" maxlength="255">
                {#<div class="text-danger">{{ form_errors(form1.message) }}</div>#}
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-success">Send Emails</button>
            </div>
        </form>
    </div>
{% endblock %}