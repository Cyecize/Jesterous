{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'partials/banner.html.twig' with {'bannerTitle':"Internal Server Error"} %} {% endembed %}

    <!-- Page Content -->
    <div class="page_content">
        <div class="container">
            <div class="row row-lg-eq-height">
                <!-- Main Content -->

                <div class="col-lg-9">
                    <div class="main_content mt-2">
                        <h2 class="alert alert-danger">Something went horribly wrong!</h2>
                        <div class="row">
                            <div class="col-md-6">
                                <img src="{{ asset('images/500.png') }}" width="100%">
                            </div>
                            <div class="col-md-4">
                                <h3 class="text-info">Status code: 500</h3>
                                {#<h4 class="text-info">Message: <span class="text-danger">{{ exception.message }}</span> </h4>#}
                                <p class="text-danger">Basically the server crashed real hard that is why you are seeing this.
                                    You can tell us how you managed to get this error <a href="{{ path('contacts_page') }}"> here</a>. </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/styles/post.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/styles/post_responsive.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('styles/js/custom.js') }}"></script>
{% endblock %}