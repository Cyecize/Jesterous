{% extends 'base.html.twig' %}
{% block title %}JEsterous: {{ user.username }}{% endblock %}
{% block body %}
    {% embed 'partials/banner.html.twig' with {'bannerTitle':user.username} %} {% endembed %}

    <div class="page_content">
        <div class="container">
            <div class="row row-lg-eq-height">
                <!-- Main Content -->
                <div class="col-lg-9">
                   {% embed 'user/profile/profile-details.html.twig' with {'user':user} %} {% endembed %}
                    {% if articles|length > 0 %}
                        <div class="mt-1 mb-1">
                            <h4 class="text-dark">{{ localLang.blogPosts }}</h4>
                            <div class="grid clearfix" style="min-height: 450px;">
                                {% embed 'partials/articles/articles-cards-renderer.html.twig' with {'articles':articles} %} {% endembed %}
                            </div>
                        </div>
                    {% endif %}
                </div>
                {% embed 'partials/sidebar/sidebar.html.twig' %} {% endembed %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/styles/post.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/styles/post_responsive.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('styles/js/custom.js') }}"></script>
{% endblock %}