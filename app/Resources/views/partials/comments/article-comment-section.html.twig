<div class="comments">
    <div class="comments_title">{{ localLang.comments }} <span>({{ comments|length }})</span></div>
    <div class="row">
        <div class="col-xl-8">
            <div class="comments_container">
                <ul class="comment_list">
                    {% for comment in comments %}
                        {% embed 'partials/comments/article-comment-block.html.twig' with {'comment':comment} %} {% endembed %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var replyForms = $('.reply-form');

        $('.reply_button').on('click', function () {
            var targetComment = $(this).attr('target_comment_id');
            replyForms.hide();
            $(this).parent().parent().find('.reply-form').show();
        });
    });
</script>