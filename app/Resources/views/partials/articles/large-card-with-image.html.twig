<!-- Large Card With Image -->
<div class="card grid-item card_large_with_image">
    <a href="{{ path('show_article', {'id': article.id}) }}">
        <img class="card-img-top" src="{{ article.backgroundImageLink }}" alt="{{ article.title }}" style="max-height: 200px;">
    </a>
    <div class="card-body">
        <div class="card-title"><a href="{{ path('show_article', {'id': article.id}) }}">{{ article.title }}</a></div>
        <p class="card-text">{{ article.summary }}</p>
        <small class="post_meta">
            <a href="#">{{ article.author.username }}</a><span>{{ article.dateAdded.format(twigInformer.simpleDateFormat) }}</span>
        </small>
    </div>
</div>