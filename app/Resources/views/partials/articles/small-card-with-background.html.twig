<!-- Small Card With Background -->
<div class="card card_default card_small_with_background grid-item">
    <div class="card_background"
         style="background:linear-gradient(to right,rgba(0,0,0,0.5), rgba(0,0,0,0.6)),url('{{ article.backgroundImageLink }}'); -webkit-background-size: cover;background-size: cover;">
    </div>
    <div class="card-body">
        <div class="card-title card-title-small"><a
                    href="{{ path('show_article', {'id': article.id}) }}">{{ article.title }}</a>
        </div>
        <small class="post_meta ">
            <a href="{{ path('user_details', {'username': article.author.username }) }}"
               class="text-light">{{ article.author.username }}</a>
            <span class="text-light">{{ article.dateAdded.format("d - M - Y") }}</span>
            {% if app.user %}
                {% embed 'partials/articles/article-star.html.twig' with {'article':article} %} {% endembed %}
            {% endif %}
            <span class="pull-right text-info font-weight-bold">{{ article.category.language.localeName }}</span>
        </small>
    </div>
</div>