<form action="{{ path('security_login') }}" method="post" enctype="multipart/form-data" class="mt-1">
    {% if error %}
        <h3 class="text-danger">{{ error }}</h3>
    {% else %}
        <h3 class="text-dark">Вход</h3>
    {% endif %}
    <div class="text-dark">
        <div class="form-group">
            <label for="username">Потребителско име</label>
            <input required type="text" value="{{ last_username }}" name="_username" placeholder="Потр. име" id="username" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Парола</label>
            <input required name="_password" type="password" placeholder="***********" id="password" class="form-control">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group">
            <button tabindex="3" class="btn btn-primary" type="submit">Напред</button>
        </div>
    </div>
</form>