<form action="{{ path('security_login') }}" method="post" enctype="multipart/form-data" class="mt-1">
    {% if error %}
        <h3 class="text-danger">{{ error }}</h3>
    {% else %}
        <h3 class="text-dark">Login</h3>
    {% endif %}
    <div class="text-dark">
        <div class="form-group">
            <label for="username">Username</label>
            <input required type="text"  value="{{ last_username }}" name="_username" placeholder="Username" id="username" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input required name="_password" type="password" placeholder="***********" id="password" class="form-control">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group">
            <button tabindex="3" class="btn btn-primary" type="submit">Login</button>
        </div>
    </div>
    <p class="text-dark">Forgotten password? click<a href="{{ path('forgotten_password') }}"> here.</a></p>
</form>